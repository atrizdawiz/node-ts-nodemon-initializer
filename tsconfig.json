{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2022",
    "lib": ["es2022"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "build"]
}
